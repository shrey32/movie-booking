<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings
	xmlns="http://java.sun.com/xml/ns/persistence/orm"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm orm_2_0.xsd"
	version="2.0">
	<entity class="com.shrey.moviebooking.commons.model.Movie">
		<table name="movies" />
		<schema name="moviesdb" />
		<attributes>
			<id name="id">
				<generated-value strategy="IDENTITY" />
			</id>
			<column name="name" />
			<column name="description" />
			<column name="durationInMinutes" />
			<column name="image" />
			<column name="releaseDate"></column>
		</attributes>
	</entity>
	<entity class="com.shrey.moviebooking.commons.model.Language">
		<table name="languages" />
		<schema name="moviesdb" />
		<attributes>
			<id name="id">
				<generated-value strategy="IDENTITY" />
			</id>
			<column name="name" />
			<column name="description" />
		</attributes>
	</entity>
	<entity class="com.shrey.moviebooking.commons.model.Cast">
		<table name="casts" />
		<schema name="moviesdb" />
		<attributes>
			<id name="id">
				<generated-value strategy="IDENTITY" />
			</id>
			<column name="name" />
			<column name="image" />
			<column name="movieCastRole" />
		</attributes>
	</entity>
	<entity class="com.shrey.moviebooking.commons.model.Category">
		<table name="categories" />
		<schema name="moviesdb" />
		<attributes>
			<id name="id">
				<generated-value strategy="IDENTITY" />
			</id>
			<column name="name" />
			<column name="description" />
		</attributes>
	</entity>
	<entity
		class="com.shrey.moviebooking.commons.model.MovieLanguage">
		<table name="movielanguage" />
	<schema name="moviesdb" />
		<attributes>
			<id name="id">
				<generated-value strategy="IDENTITY" />
			</id>
			<column name="movieId" />
			<column name="languageId" />
		</attributes>
	</entity>
	<entity class="com.shrey.moviebooking.commons.model.MovieCast">
		<table name="moviecast" />
		<schema name="moviesdb" />
		<attributes>
			<id name="id">
				<generated-value strategy="IDENTITY" />
			</id>
			<column name="movieId" />
			<column name="castId" />
		</attributes>
	</entity>
	<entity
		class="com.shrey.moviebooking.commons.model.MovieCategory">
		<table name="moviecategory" />
		<schema name="moviesdb" />
		<attributes>
			<id name="id">
				<generated-value strategy="IDENTITY" />
			</id>
			<column name="movieId" />
			<column name="categoryId" />
		</attributes>
	</entity>
</entity-mappings>